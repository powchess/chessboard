{
	"name": "@powchess/chessboard",
	"private": false,
	"version": "1.1.2",
	"description": "Chessboard UI Package for PowChess.com",
	"repository": {
		"type": "git",
		"url": "https://github.com/powchess/chessboard"
	},
	"bugs": {
		"url": "https://github.com/powchess/chessboard/issues"
	},
	"keywords": [
		"chess",
		"powchess",
		"svelte",
		"chessboard",
		"ui",
		"typescript"
	],
	"author": "PowChess GmbH",
	"license": "MIT",
	"homepage": "https://powchess.com",
	"type": "module",
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"scripts": {
		"dev": "vite dev --port 4000",
		"dev:host": "vite dev --port 4000 --host",
		"build": "vite build",
		"preview": "vite preview --port 4000",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "eslint . --fix",
		"format": "prettier --ignore-path .gitignore --write .",
		"package": "svelte-kit sync && svelte-package && publint"
	},
	"devDependencies": {
		"@sveltejs/adapter-static": "^2.0.2",
		"@sveltejs/kit": "1.20.1",
		"@sveltejs/package": "^2.0.2",
		"@types/chess.js": "^0.13.3",
		"@typescript-eslint/eslint-plugin": "^5.59.8",
		"@typescript-eslint/parser": "^5.59.8",
		"autoprefixer": "^10.4.14",
		"chess.js": "^1.0.0-beta.6",
		"cooltipz-css": "^2.2.2",
		"eslint": "^8.41.0",
		"eslint-config-airbnb-base": "^15.0.0",
		"eslint-config-airbnb-typescript": "^17.0.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-svelte": "^2.30.0",
		"postcss": "^8.4.24",
		"postcss-load-config": "^4.0.1",
		"prettier": "^2.8.8",
		"prettier-plugin-svelte": "^2.10.1",
		"prism-svelte": "^0.5.0",
		"prismjs": "^1.29.0",
		"publint": "^0.1.12",
		"svelte-check": "^3.4.3",
		"svelte-preprocess": "^5.0.4",
		"svelte-prism": "^1.1.6",
		"tailwindcss": "^3.3.2",
		"typescript": "^5.1.3",
		"vite": "4.3.9"
	},
	"exports": {
		"./Chessboard.svelte": {
			"types": "./dist/Chessboard.svelte.d.ts",
			"svelte": "./dist/Chessboard.svelte",
			"default": "./dist/Chessboard.svelte"
		}
	},
	"peerDependencies": {
		"svelte": "^3.59.1"
	}
}
