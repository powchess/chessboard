{
	"name": "@powchess/chessboard",
	"private": false,
	"version": "1.4.12",
	"description": "Chessboard UI Package for PowChess.com",
	"repository": {
		"type": "git",
		"url": "https://github.com/powchess/chessboard"
	},
	"bugs": {
		"url": "https://github.com/powchess/chessboard/issues"
	},
	"keywords": [
		"chess",
		"powchess",
		"svelte",
		"chessboard",
		"ui",
		"typescript"
	],
	"author": "PowChess GmbH",
	"license": "MIT",
	"homepage": "https://powchess.com",
	"type": "module",
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"scripts": {
		"dev": "vite dev --port 4000",
		"dev:host": "vite dev --port 4000 --host",
		"build": "vite build",
		"preview": "vite preview --port 4000",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "eslint . --fix --cache",
		"format": "prettier --ignore-path .gitignore --write .",
		"package": "svelte-kit sync && svelte-package && publint"
	},
	"devDependencies": {
		"@sveltejs/adapter-static": "^2.0.3",
		"@sveltejs/kit": "1.27.6",
		"@sveltejs/package": "^2.2.3",
		"@types/chess.js": "^0.13.7",
		"@typescript-eslint/eslint-plugin": "^6.13.1",
		"@typescript-eslint/parser": "^6.13.1",
		"autoprefixer": "^10.4.16",
		"chess.js": "^1.0.0-beta.6",
		"cooltipz-css": "^2.3.0",
		"eslint": "^8.54.0",
		"eslint-config-airbnb-base": "^15.0.0",
		"eslint-config-airbnb-typescript": "^17.1.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-prettier": "^5.0.1",
		"eslint-plugin-svelte": "^2.35.1",
		"postcss": "^8.4.31",
		"prettier": "^3.1.0",
		"prettier-plugin-svelte": "^3.1.2",
		"prism-svelte": "^0.5.0",
		"prismjs": "^1.29.0",
		"publint": "^0.2.5",
		"svelte-check": "^3.6.2",
		"tailwindcss": "^3.3.5",
		"typescript": "^5.3.2",
		"vite": "4.5.0"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		},
		"./pieces": {
			"types": "./dist/state/piece.d.ts",
			"default": "./dist/state/piece.js"
		}
	},
	"peerDependencies": {
		"svelte": "^4.2.8"
	},
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"typesVersions": {
		">4.0": {
			"pieces": [
				"./dist/state/piece.d.ts"
			]
		}
	}
}
